<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:padding="5dp"
        android:layout_margin="10dp"
        app:cardBackgroundColor="@color/cardBackgroundColor"
        app:cardCornerRadius="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
            android:id="@+id/test_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weekly Test"
            android:textSize="24sp"
            android:textColor="@color/test_heading"
            android:fontFamily="monospace"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"></TextView>

            <TextView
                android:id="@+id/time_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="false"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="15sp"
                android:text="12:28pm"
                android:textAlignment="center"
                android:textColor="@color/sub_text"
                android:textSize="16sp"
                android:layout_marginEnd="15dp"></TextView>

            <TextView
                android:id="@+id/date_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20sp"
                android:text="On 30th March"
                android:textAlignment="center"
                android:textColor="@color/sub_text"
                android:textSize="16sp"
                android:layout_below="@+id/test_heading"></TextView>

            <TextView
                android:id="@+id/section_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20sp"
                android:text="Class 7th C"
                android:textAlignment="center"
                android:textColor="@color/sub_text"
                android:textSize="16sp"
                android:layout_below="@+id/test_heading"
                android:layout_toEndOf="@+id/date_textView"></TextView>



        </RelativeLayout>



    </androidx.cardview.widget.CardView>
</RelativeLayout>